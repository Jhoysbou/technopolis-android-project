<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".GroupListFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/activity_groplist__topbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorBlue"
        app:navigationIcon="@drawable/ic_navigate_before_black_24dp"
        android:paddingLeft="-8dp"
        app:layout_constraintBottom_toTopOf="@id/activity_grouplist__searchbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="АПО-41"
            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/colorWhite"
            android:textSize="20sp" />
    </androidx.appcompat.widget.Toolbar>



    <LinearLayout
        android:id="@+id/activity_grouplist__searchbar"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/colorBlue"
        android:paddingBottom="10dp"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        app:layout_constraintBottom_toTopOf="@id/activity_grouplist__rv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity_groplist__topbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0"
        android:orientation="horizontal"
        >

        <EditText
            android:id="@+id/activity_grouplist__searchfield"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:inputType="text"
            android:background="@drawable/rounded_edittext"
            android:drawableStart="@drawable/ic_search"
            android:drawableEnd="@drawable/ic_clear"
            android:drawablePadding="@dimen/icon_padding"
            android:padding="10dp"
            app:endIconMode="clear_text"
            />

        <TextView
            android:id="@+id/activity_grouplist__cancel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/cancel"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:background="@color/colorBlue"
            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/colorWhite"
            android:visibility="gone"
            android:gravity="center"
            android:paddingStart="10dp"/>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/activity_grouplist__rv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity_grouplist__searchbar"
        android:overScrollMode="never"/>


</androidx.constraintlayout.widget.ConstraintLayout>